{
    "name": "qortex/pug-editor",
    "description": "Write text with PUG markup with the Clound9 Ace Editor",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Qortex Dev Team",
            "email": "welcome@qortex.ru"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4|^8",
        "qortex/mdash": "^0.3.0",
        "pug-php/pug": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "orchestra/testbench": "^5|^6"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "Qortex\\PugEditor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Qortex\\PugEditor\\Tests\\": "tests/"
        }
    },
    "extra": {
        "npm": {
            "ace-builds": "^1.4.12"
        }
    }
}